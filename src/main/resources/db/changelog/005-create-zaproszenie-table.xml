<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Tabela: zaproszenie -->
    <changeSet id="005-create-zaproszenie-table" author="admin.hw">
        <createTable tableName="zaproszenie">
            <column name="id_zaproszenia" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="id_klient" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="id_uzytkownik" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="informacje_dodatkowe" type="VARCHAR(255)"/>

            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMPTZ" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Klucze obce -->
        <addForeignKeyConstraint
                baseTableName="zaproszenie"
                baseColumnNames="id_klient"
                referencedTableName="klient"
                referencedColumnNames="id_klient"
                constraintName="fk_zaproszenie_klient"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="zaproszenie"
                baseColumnNames="id_uzytkownik"
                referencedTableName="uzytkownik"
                referencedColumnNames="id_uzytkownik"
                constraintName="fk_zaproszenie_uzytkownik"
                onDelete="CASCADE"/>
    </changeSet>


</databaseChangeLog>
